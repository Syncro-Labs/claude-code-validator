{
  "name": "@syncrolabs/claude-code-validator",
  "version": "1.0.7",
  "type": "module",
  "description": "Extensible validation framework for Claude Code hooks",
  "author": "SyncroLabs",
  "main": "src/index.ts",
  "bin": {
    "claude-code-validator": "./src/cli.ts"
  },
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/index.ts",
    "./core": "./src/core/validator.ts"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "validate": "bun src/cli.ts validate --stdin",
    "list-rules": "bun src/cli.ts list-rules",
    "typecheck": "bunx tsc --noEmit",
    "test": "bun run typecheck",
    "release": "bun run test && changelogen --release --push"
  },
  "keywords": [
    "claude-code",
    "validation",
    "hooks",
    "framework",
    "typescript",
    "bun"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Syncro-Labs/claude-code-validator.git"
  },
  "bugs": {
    "url": "https://github.com/Syncro-Labs/claude-code-validator/issues"
  },
  "homepage": "https://claude-code-validator.pages.dev",
  "license": "MIT",
  "dependencies": {
    "hookable": "^5.5.3",
    "citty": "^0.1.6",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "changelogen": "^0.5.7"
  }
}
