{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "bash ${CLAUDE_PROJECT_DIR}/.claude/SessionStart",
        "timeout": 30
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [{
          "type": "command",
          "command": "bash ${CLAUDE_PROJECT_DIR}/.claude/claude-code-validator/validate validate --stdin",
          "timeout": 10
        }]
      },
      {
        "matcher": "Write",
        "hooks": [{
          "type": "command",
          "command": "bash ${CLAUDE_PROJECT_DIR}/.claude/claude-code-validator/validate validate --stdin",
          "timeout": 10
        }]
      }
    ]
  }
}
