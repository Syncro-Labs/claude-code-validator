{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "bash ${CLAUDE_PROJECT_DIR}/.claude/SessionStart",
        "timeout": 30
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PROJECT_DIR}/src/cli.ts validate --stdin",
          "timeout": 10
        }]
      },
      {
        "matcher": "Write",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PROJECT_DIR}/src/cli.ts validate --stdin",
          "timeout": 10
        }]
      }
    ]
  }
}
